<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jiudian.manage.mapper.LendMapper">
    <resultMap id="LendMap" type="com.jiudian.manage.model.Lend">
        <result column="userid" property="userid"/>
        <result column="name" property="name"/>
        <result column="num" property="num"/>
        <result column="phone" property="phone"/>
        <result column="message" property="message"/>
        <result column="lendDate" property="lendDate"/>
        <result column="backDate" property="backDate"/>
        <result column="equiment" property="equiment"/>
        <result column="checkUname" property="checkUname"/>
    </resultMap>
    <insert id="Insert_a_record" parameterType="com.jiudian.manage.model.Lend">
        insert into lend (userid,name,num,phone,message,lendDate,backDate,equiment,checkUname) values (#{userid},#{name},#{num},#{phone},#{message},#{lendDate},#{backDate},#{equiment},#{checkUname})
    </insert>
    <select id="Get_lend_list" parameterType="java.lang.String" resultMap="LendMap">
        select * from lend where userid=#{userid}
    </select>

    <select id="Get_all_lend_list" resultMap="LendMap">
        select * from lend
    </select>
    <update id="Setcheckname">
        update lend set checkUname=#{uname} where lendid=#{lendid}
    </update>
    <delete id="delect_lend">
        delete from lend where lendid=#{lid}
    </delete>
</mapper>